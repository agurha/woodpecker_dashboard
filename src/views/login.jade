extends layout

block content
  div(id='main')
    div(class='container-fluid')
      div(class='hero-unit')
        h1 Welcome Back
      div(class='container')
        div(id='login', class='row-fluid')

          div(class='span12')
            form(accept-charset='UTF-8', action='login', method='POST', id='auth-form')
              div(style='margin:0;padding:0;display:inline')
                input(type='hidden', name='csrfmiddlewaretoken', value='')
              div(class='control-group')
                div(class='controls')
                  input(id='user_email', type='email', name='email', maxlength='75', size=30, placeholder='your@email.com')

              div(class='control-group')
                input(id='id_password', type='password', name='password', size=30, placeholder='password')


              div(class='form-actions')
                input(type='submit', value='submit', class='btn btn-primary btn-large')
                a(href='/account/password/reset', class='btn btn-link btn-large') Forgot your password?



